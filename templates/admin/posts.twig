
{% extends "baseAdmin.twig" %}

{% block content %}

<h2>Admin POST : CRUD utilisateur</h2>


<div class="adminPost" >

	<p class="">id</p>
	<p class="">status</p>
	<p class="">titre</p>
	<p class="">user</p>
	<p class="">image</p>
	<p class="">nbComment</p>
	<p class="">Action</p>

</div>
{% for key, post in postList %}

<div class="adminPost" >
	<p class="">{{ post.id }}</p>
	<p class="">{{ post.status }}</p>
	<p class="">{{ post.title }}</p>
	<p class="">{{ post.user ? post.user.name : 'Non renseign√©' }}</p>
	<p class="">{{ post.image }}</p>
	<p class="">{{ post.nbComment }}</p>
	<ul class="post_btn_list">	
		<li class="btn btn_delete">
			<a class="post_delete" href="/post/{{ post.id }}/update/archive"><img class="" src="/public/assets/images/poubelle.png" alt="supprimer l'article"/></a>
		</li>
		<li class="btn btn_read">
			<a class="post_read" href="/post/{{ post.id }}"><img class="" src="/public/assets/images/vision.png" alt="voir l'article"/></a>
		</li>
		<li class="btn btn_update">
			<a class="post_update" href="/post/{{ post.id }}/update"><img class="" src="/public/assets/images/article.png" alt="modifier l'article"/></a>
		</li>
	</ul>

</div>


{% endfor %}	



<ul class="pagination">
    {% for i in 1..nbPage %}
            <li class="{{pageActive == i ? 'pageActive': ''}}"><a href="/posts/{{ i }}">{{ i }}</a></li>
    {% endfor %}
</ul>

{% endblock %}